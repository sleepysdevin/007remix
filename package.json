{
  "name": "007remix",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "build:baker": "vite build -c vite.baker.config.ts",
    "bake-sprites": "npm run build:baker && tsx scripts/bake-sprites.ts",
    "preview": "vite preview",
    "server": "tsx server/server.ts",
    "proxy": "node --experimental-fetch server/nft-proxy.js",
    "start": "node server-production.js",
    "docker:build": "docker build -t 007remix:latest .",
    "docker:run": "docker run -p 3000:3000 -e NODE_ENV=production 007remix:latest"
  },
  "dependencies": {
    "@dimforge/rapier3d-compat": "^0.14.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@metaplex-foundation/digital-asset-standard-api": "^2.0.0",
    "@metaplex-foundation/mpl-core": "^1.7.0",
    "@metaplex-foundation/mpl-core-das": "^0.0.3",
    "@metaplex-foundation/umi": "^0.8.10",
    "@metaplex-foundation/umi-bundle-defaults": "^0.8.10",
    "@pixiv/three-vrm": "^3.4.5",
    "@reown/appkit": "^1.8.18",
    "@reown/appkit-adapter-solana": "^1.8.18",
    "@solana/web3.js": "^1.82.0",
    "cors": "^2.8.6",
    "express": "^4.22.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "three": "^0.172.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.25.0",
    "@cloudflare/workers-types": "^4.2024.2",
    "@types/node": "^20.19.33",
    "@types/three": "^0.172.0",
    "buffer": "^6.0.3",
    "https-browserify": "^1.0.0",
    "process": "^0.11.10",
    "puppeteer": "^24.37.2",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "url": "^0.11.0",
    "vite": "^6.4.1",
    "wrangler": "^4.65.0"
  }
}
